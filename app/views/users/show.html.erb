<h3 align="center"><%= @user.full_name %>'s Portfolio</h3>

<div align="right">
  <table>
    <tr>
      <td><strong>Full Name: </strong></td>
      <td><%= @user.full_name %> <br /></td>
    </tr>
    <tr>
      <td><strong>Email: </strong></td>
      <td><%= @user.email %></td>
    </tr>
  </table>
</div>
<% if @user.stocks.size > 0 %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">This user is not currently tracking any stocks</p>
<% end %>

<%= link_to "Back", my_friends_path, class: "btn btn-primary" %>
